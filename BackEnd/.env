# Backend environment variables
# Database - Using Replit's PostgreSQL DATABASE_URL (automatically configured)

# App
PORT=5000
NODE_ENV=development

# JWT Secret - Fallback value (Replit's SESSION_SECRET will be used if available via code)
JWT_SECRET=QMS_JWT_Secret_Key_2024_Secure_Random_String

# Mail (optional - for email notifications)
# Leave empty for now - emails will be skipped if not configured
MAIL_HOST=
MAIL_PORT=
MAIL_USER=
MAIL_PASS=
MAIL_FROM=admin@qms.local

# Bootstrap
# When true (and DB is empty) the app will create default company/role/user
BOOTSTRAP_ON_SYNC=true
